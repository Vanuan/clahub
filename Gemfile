source 'https://rubygems.org'

gem 'rails', '3.2.8'

gem 'pg'
gem 'jquery-rails'
gem 'thin'
gem 'bootstrap-sass'
gem 'omniauth'
gem 'omniauth-github'

group :development do
  gem 'pry'
  gem 'pry-rails'
  gem 'pry-debugger'
  gem 'pry-remote'
end

group :test do
  gem 'capybara'
end

group :test, :development do
  gem 'rspec-rails', '~> 2.0'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end
